{
  "name": "oas-test",
  "type": "module",
  "version": "1.0.0",
  "description": "",
  "main": "./dist/tson-server.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "oas:lint": "npx @redocly/cli lint openapi/openapi.yaml",
    "oas:bundle": "npx @redocly/cli bundle openapi/openapi.yaml -o=openapi/bundle.json && npx @redocly/cli bundle openapi/openapi.yaml -o=openapi/bundle.yaml",
    "oas:doc": "npx @redocly/cli build-docs openapi/openapi.yaml -o=openapi/api-docs.html",
    "oas:split": "npx @redocly/cli split openapi/bundle.json --outDir=openapi/jsonSplit",
    "oas:tson": "npx openapi-transformer-toolkit oas2tson -i openapi/bundle.yaml -o example/oasSchemas",
    "oas:gen": "npm run oas:lint && npm run oas:bundle && npm run oas:doc && npm run oas:tson",
    "format": "npx @biomejs/biome format --write",
    "lint:fixtb": "npx @biomejs/biome lint --write example/tb",
    "build": "npx tsc tson-server.ts --outDir ./dist",
    "start": "node ./dist/tson-server.js | npx pino-pretty",
    "everything": "npm run oas2tson && npm run build && npm run start"
  },
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@apidevtools/json-schema-ref-parser": "^11.9.1",
    "@jmjf/result": "^1.0.1",
    "commander": "^13.1.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@fastify/swagger": "^9.4.2",
    "@fastify/type-provider-json-schema-to-ts": "^5.0.0",
    "@fastify/type-provider-typebox": "^5.1.0",
    "@sinclair/typebox": "^0.34.24",
    "@types/node": "^22.13.4",
    "fastify": "^5.2.1",
    "pino-pretty": "^13.0.0",
    "typescript": "^5.7.3"
  }
}